@model Rest.Models.Document

@{
    ViewBag.Title = "Login";
}

@Html.ValidationSummary()
@using (Html.BeginForm("Log_in", "Login", FormMethod.Post))
{
    <div class="form-signin">
        <form>
            <h2 class="form-signin-heading font-bety">@ViewBag.Title</h2>
            <div class="form-group">
                <label for="inputText" class="sr-only">Jméno</label>
                @Html.TextBoxFor(x => x.LoginName, new { @class = "form-control", @placeholder = "Jméno" })
                @Html.ValidationMessageFor(x => x.LoginName)

                <label for="inputPassword" class="sr-only">Heslo</label>
                @Html.TextBoxFor(x => x.LoginPassword, new { @type = "password", @class = "form-control", @placeholder = "Heslo" })
                @Html.ValidationMessageFor(x => x.LoginPassword)
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">@ViewBag.Title</button>
            </div>
        </form>
    </div>
}




