@model Rest.Models.Document

@{
    ViewBag.Title = "Přihlášení";
}

<div class="container">

    <form class="form-signin">
        <h2 class="form-signin-heading font-bety">@ViewBag.Title</h2>
        <label for="inputText" class="sr-only">Jméno</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
        <label for="inputPassword" class="sr-only">Heslo</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
        <div class="checkbox">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">@ViewBag.Title</button>
    </form>

</div> <!-- /container -->


