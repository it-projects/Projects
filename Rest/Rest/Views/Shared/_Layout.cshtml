
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width , initial-scale=1" />

    <meta name="Rest" content="" />
    <meta name="author" content="it-program" />

    <link rel="icon" href="#" />

    <!--BOOTSTRAP-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-support-ie10-width.css" rel="stylesheet" />
    


    <!--STYLES-->
    <link href="~/Content/Styles.less" rel="stylesheet" />

    <title>Prototip</title>
</head>
<body>
    <div class="navbar-wrapper">
        <div id="head" class="container">
            <nav class="navbar navbar-fixed-top">
                <div class="container navbar-color">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav bold">
                            <li>
                                <img src="~/Images/Icon/rest-stramber_zelena1.png" style="margin-right: 13px; margin-top: 5px;" />
                            </li>
                            <li class="font-color">
                                @Html.ActionLink("Domů", "Index", "Home")
                            </li>
                            <li class="active">
                                @Html.ActionLink("Galerie", "Gallery", "Home")
                            </li>
                            <li class="active">
                                @Html.ActionLink("Kontakt", "Contact", "Home")
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="active">
                                @Html.ActionLink("Login", "_Login", "Login")
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>  <!--MENU-->

  <div class="container container-background">          
    <div class="col-sm-8 blog-main">
        <div class="blog-header">

            @RenderBody()


        </div>
    </div><!-- /.blog-main -->
    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
        <div class="sidebar-module">
            <a href="~/Files/JL.pdf">
                <h4 class="font-bety">Pozvánka na akce</h4>
                <img class="img-responsive" src="~/Images/Galery/Preview/IMG_4.jpg" />
            </a>
        </div>

        <div class="sidebar-module">
            <a href="~/Files/Menu.pdf">
                <h4 class="font-bety center-top">Týdení menu</h4>
                <img class="img-responsive" src="~/Images/Others/polevka.jpg" />
            </a>
        </div>

        <div class="sidebar-module">
            <a href="~/Files/JL.pdf">
                <h4 class="font-bety">Jídelní lístek</h4>
                <img class="img-responsive" src="~/Images/Others/steak.jpg" />
            </a>
        </div>

    </div><!-- /.row -->

    <footer class="foot">
        <table class="table-responsive pull-right">
            <tr>
                <th class="center-top"><a href="#head">
                     <img src="~/Images/Others/nahoru1.png" />
                    </a>
                </th>
            </tr>
            
            <tr>
                <th><a href="#">
                      <img src="~/Images/Others/ITprogram_logo.png" />
                    </a>
                </th>
            </tr>         
        </table>
       <p>
             @DateTime.Now.Date.ToShortDateString() &middot; @Html.ActionLink("Domů", "Index", "Home") &middot; @Html.ActionLink("Galerie", "Galery", "Home") &middot; @Html.ActionLink("Kontakt", "Contact", "Home")
        </p>

        <table class="table-responsive">
            <tr>
                <th></th>
                <th><img src="~/Images/Icon/rest-stramber_zelena1.png" /></th>
            </tr>
            <tr>
                <th></th>
                <th>@Model.Adress</th>
            </tr>
            <tr>
                <th></th>
                <th>@Model.PostCode @Model.City</th>
            </tr>
            <tr>
                <th></th>
                <th>@Model.Company </th>
            </tr>
            <tr>
                <th></th>
                <th>@Model.Phone</th>
            </tr>
            <tr>
                <th></th>
                <th>@Model.Email</th>
            </tr>
        </table>
        
    </footer>
    </div><!-- /.container -->
        

   


    <!--SCRIPTS-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~Scripts/jquery-1.9.0.min.js"><\/script>')</script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap-support-ie10-width.js"></script>

    <script src="~/Scripts/gallery.js"></script>
 
</body>
</html>